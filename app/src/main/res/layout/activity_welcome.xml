<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".auth.WelcomeActivity">


<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_header"
        android:fontFamily="@font/cera_pro_regular"
        android:textSize="24sp"
        android:textFontWeight="700"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_login_fb"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login_fb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/log_in_with_facebook"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_facebook"
        android:drawablePadding="8dp"
        android:paddingStart="60dp"
        android:paddingEnd="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_welcome"
        android:background="@drawable/facebook_rounded_button"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="50dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login_google"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/log_in_with_google"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_google"
        android:drawablePadding="8dp"
        android:paddingStart="60dp"
        android:paddingEnd="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login_fb"
        android:background="@drawable/google_rounded_button"
        android:layout_marginTop="30dp"
        app:layout_constraintWidth_percent="0.9"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_login_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_in_with_email"
        android:fontFamily="@font/cera_pro_regular"
        android:textColor="@color/white"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:paddingStart="60dp"
        android:paddingEnd="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_login_google"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="30dp"
        app:layout_constraintWidth_percent="0.9"
        />

    <TextView
        android:id="@+id/text_view_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:fontFamily="@font/cera_pro_thin"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_login_email"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:text="@string/sign_up"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:fontFamily="@font/cera_pro_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_or"
        android:layout_marginTop="50dp"
        android:elevation="8dp"
        app:layout_constraintWidth_percent="0.9"/>




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>